<main>
  

    <div class="edit_container">

        <form action="/{{item._id}}" method="POST">
        <div class="field" >
            <label class="label" for="name">Name: </label>
            <input class="input" name="name" id="i_name" placeholder="What is the name of this item?" value={{item.name}}>
        </div>
        <div class="field" >
            <label class="label" for="description">Item Description: </label>
            <input class="input" name="description" id="i_name" placeholder="describe this item..." value={{item.description}}>
        </div>
        <div class="field" >
            <label class="label" for="image_url"> Image URL:  </label>
            <input class="input" name="image_url" id="i_image" placeholder="The URL of the Image" value={{item.image_url}}>
        </div>
        
        <div class="field" >
            <label class="label" for="category"> Category  </label>
            <input class="input" name="category" id="i_image" placeholder="Select a category..." value={{item.category}} >
        </div>
        
        <div class="field" >
            <label class="label" for="price"> Price  </label>
            <input class="input" name="price" id="i_image" placeholder="$$$" value={{item.price}}>
        </div>
        <div>
            <button style="width: 7vw; font-size: 1rem;"> Submit </button>
        </div>
        </form>
        
        
        <form action="/{{item._id}}?_method=DELETE" method="POST">
        
        <div>
            <button style="width: 7vw; font-size: 1rem; background-color:red;"> Delete Permanently? </button>
        </div>
        </form>


    </div>

    <div class="item_container" >
            <div class="tile is-parent" style="width:350px;" >
                <article class="tile is-child notification is-success">
                    <p class="title">  {{item.name}}  </p>
                    <p class="subtitle">  {{item.description}}  </p>
                    <figure class="image_inner_container" class="image is-4by3">
                        <img class="shop_grid_images"  src={{item.image_url}}>
                    </figure>
                    <p class="subtitle"> ${{item.price}}  </p>
                    <a href="/{{item._id}}">
                        <i class="fas fa-edit fa-3x"></i>
                    </a>
                </article>
            </div>
    </div>
</main>
